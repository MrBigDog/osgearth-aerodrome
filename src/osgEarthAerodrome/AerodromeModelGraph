#ifndef OSGEARTH_AERODROME_AERODROMEMODELGRAPH
#define OSGEARTH_AERODROME_AERODROMEMODELGRAPH 1

#include "Common"
#include "AerodromeNode"

#include <osgEarth/Map>
#include <osg/Group>


namespace osgEarth { namespace Aerodrome
{
    using namespace osgEarth;
    //using namespace osgEarth::Features;

    /**
     * Aerodrome
     */
    class OSGEARTHAERODROME_EXPORT AerodromeModelGraph : public osg::Group
    {
    public:
        AerodromeModelGraph(const Map* map);

        AerodromeNode* getAerodromeNode(const std::string& icao);
        AerodromeNode* getOrCreateAerodromeNode(const std::string& icao);

        int setupPaging();

        /**
         * Gets the map associated with this AerodromeModelGraph. Be careful, this is held by an osg::observer_ptr and may be NULL
         */
        const Map* getMap() const { return _map.get(); }

    protected:
        virtual ~AerodromeModelGraph();

    private:
        UID _uid;
        AerodromeNodeMap _aerodromes;
        osg::observer_ptr<const Map> _map;
    };

} } // namespace osgEarth::Aerodrome

#endif // OSGEARTH_AERODROME_AERODROMEMODELGRAPH